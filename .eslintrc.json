{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": [
            "warn", {
                "arrays" : "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline"
            }
        ],

        "indent": [ "warn", 4 ],

        "quotes": [
            "warn",
            "single", {
                "allowTemplateLiterals": true,
                "avoidEscape": true
            }
        ],

        "keyword-spacing"     : [ "warn", { "before": true } ],
        "no-case-declarations": [ "warn"  ],
        "no-extra-semi"       : [ "warn"  ],
        "no-shadow"           : [ "warn"  ],
        "no-undef"            : [ "error" ],
        "no-unused-vars"      : [ "error" ],
        "semi"                : [ "warn", "always" ]
    }
}
