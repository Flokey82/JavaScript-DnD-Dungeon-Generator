{
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "semi": [ "warn", "always" ],
        "quotes": [ "warn", "single",  { "allowTemplateLiterals": true, "avoidEscape": true } ],
        "no-shadow": "warn",
        "no-unused-vars": [ "error" ],
        "no-undef": [ "error" ]
    }
}
