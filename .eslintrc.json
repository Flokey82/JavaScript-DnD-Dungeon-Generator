{
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "max-len": [ "warn", { "code": 120, "comments": 80 } ],
        "no-shadow": "warn",
        "no-undef": [ "error" ],
        "no-unused-vars": [ "error" ],
        "quotes": [ "warn", "single",  { "allowTemplateLiterals": true, "avoidEscape": true } ],
        "semi": [ "warn", "always" ]
    }
}
